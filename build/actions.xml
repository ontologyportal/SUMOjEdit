<!DOCTYPE ACTIONS SYSTEM "actions.dtd">
<ACTIONS>
    <ACTION NAME="quicknotepad.choose-file">
        <CODE>
            wm.addDockableWindow(com.articulate.sigma.jedit.QuickNotepadPlugin.NAME);
            wm.getDockableWindow(com.articulate.sigma.jedit.QuickNotepadPlugin.NAME).chooseFile();
        </CODE>
    </ACTION>

    <ACTION NAME="quicknotepad.save-file">
        <CODE>
            wm.addDockableWindow(com.articulate.sigma.jedit.QuickNotepadPlugin.NAME);
            wm.getDockableWindow(com.articulate.sigma.jedit.QuickNotepadPlugin.NAME).saveFile();
        </CODE>
    </ACTION>

    <ACTION NAME="quicknotepad.copy-to-buffer">
        <CODE>
            wm.addDockableWindow(com.articulate.sigma.jedit.QuickNotepadPlugin.NAME);
            wm.getDockableWindow(com.articulate.sigma.jedit.QuickNotepadPlugin.NAME).copyToBuffer();
        </CODE>
    </ACTION>
</ACTIONS>